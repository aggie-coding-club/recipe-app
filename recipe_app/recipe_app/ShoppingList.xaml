<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="recipe_app.ShoppingList">
    <ContentPage.Content>
        <ListView x:Name="IngredientList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextCell Text="{Binding IName}"/>-->
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="4" Padding="5" >
                            <Label Text="{Binding IName}" />
                            <Label Text="{Binding ICount}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>